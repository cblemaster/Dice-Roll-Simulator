<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DiceRoller.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DiceRoller.MAUI"
    xmlns:pages="clr-namespace:DiceRoller.MAUI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Dice Roller">
    <TabBar>
        <ShellContent
            Title="Roll Dice"
            ContentTemplate="{DataTemplate pages:RollDicePage}"
            Route="RollDicePage" />
        <ShellContent
            Title="Roll Ability Scores"
            ContentTemplate="{DataTemplate pages:RollAbilityScoresPage}"
            Route="RollAbilityScores" />
    </TabBar>
</Shell>
