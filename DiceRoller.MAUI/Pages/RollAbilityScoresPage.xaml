<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.MAUI.Pages.RollAbilityScoresPage"
             Title="Roll Ability Scores">
    <Grid Style="{StaticResource ContainerGridStyle}" RowDefinitions="2*,8*">
        <HorizontalStackLayout Margin="15,15,15,15" HorizontalOptions="StartAndExpand" Spacing="10">
            <Button Command="{Binding HowItWorksClickedCommand}" Text="How It Works" Style="{StaticResource LargeButtonStyle}" />
            <Button Text="Roll Ability Scores" Style="{StaticResource LargeButtonStyle}" />
        </HorizontalStackLayout>
        <VerticalStackLayout Grid.Row="1" Margin="15,15,15,15">
            <Label Style="{StaticResource LargeLabelStyle}" Text="Results" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>